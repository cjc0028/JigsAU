<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffb7762a"
    android:orientation="vertical"
    android:id="@+id/fragment_images">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/image1"
        android:layout_weight="1"
        android:background="@drawable/classic_puzzle_zoomed"
        android:layout_margin="5dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/image2"
        android:layout_weight="1"
        style="@style/button_style"
        android:background="@drawable/samford_hall_zoomed"
        android:layout_margin="5dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/image3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/auburn_logo_zoomed"
        android:layout_margin="5dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:id="@+id/bottom_divider"
        android:layout_below="@+id/size_selection"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Gallery"
        android:id="@+id/gallery_button"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="36dp"
        android:textColor="#FFFFFF" />
</LinearLayout>